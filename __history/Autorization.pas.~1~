procedure TFormAutorization.Timer1Timer(Sender: TObject);
var
  Hf, Hp,Hb,Hm : HWND;
begin

 //  Caption:=TimeToStr(Time);
  Hf := FindWindow (nil, 'Зчитування особистого ключа');


    Hm:=FindWindowEx(Hf,0,'TKeyMediaFrame',nil);
       if hm<>0 then  begin
   //Caption:='media';
 //  SendMessage(hb, BM_CLICK, 0, 0);
   end;
   Hp:=FindWindowEx(Hm,0,'TMaskEdit',nil);//хэндл эдита
   if hp<>0 then
   begin
   //Caption:='ok3';
   SendMessage(Hp,WM_SETTEXT,0,lparam(LPCTSTR('10210608')));
   Timer1.Enabled:=false;
   Memo1.Lines.Add('3');
    end;

      if hf<>0 then
   begin
 //  Caption:='ok1';
   hb := FindWindowEx(hf, 0, 'TButton', 'Зчитати');
   end;
   if hb<>0 then  begin
  // Caption:='ok2';
  SendMessage(hb, BM_CLICK, 0, 0);
   if SendMessage(hb, BM_CLICK, 0, 0)<>0 then
  //  Memo1.Lines.Add('3');
   end;
end;

